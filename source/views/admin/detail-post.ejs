                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Chi tiết bài đăng</h1>

                    <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-secondary rounded shadow-sm">
                        <img class="rounded-circle mr-3" 
                        style="background-color: #fff; border: 1px solid #dddfeb; padding: 0.20rem; border-radius: 0.35rem;" 
                        src="/<%= post.avatar %>" alt="" width="48px" height="48px">
                        <div class="lh-100 w-100">
                            <h6 class="mb-0 text-white lh-100"><%= post.fullname %> - <%= post.role %></h6>
                            <small>Đăng bài vào lúc: <script>displayAddPostDatetime2('<%= post.addDate %>')</script></small>
                        </div>
                    </div>

                    <a href="/admin/add-post" class="btn btn-primary shadow-sm"><i class="bi bi-plus-lg"></i> Thêm bài đăng</a>
                    <button data-toggle="modal" data-target="#editModal" class="btn btn-warning shadow-sm"><i class="bi bi-pencil-square"></i> Chỉnh sửa</button>
                    <a data-toggle="modal" data-target="#confirmDeletePostModal" class="btn btn-danger shadow-sm"><i class="bi bi-trash"></i> Xóa</a>


                    <!-- Edit Modal -->
                    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-xl">
                            <div class="modal-content">

                                <form action="/admin/edit-post" method="post" enctype="multipart/form-data">

                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Chỉnh sửa bài đăng</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">

                                        <input name="idPost" value="<%= post.idPost %>" type="hidden">

                                        <div class="row">
                                            <div class="col-6">
                                                <div class="mr-5 text-center">
                                                    <img id="postImageTag" 
                                                    style="background-color: #fff; border: 1px solid #dddfeb; padding: 0.25rem; border-radius: 0.35rem;" 
                                                    width="350px" height="350px" src="/<%= post.postImage %>">
                
                                                    <div class="">
                                                        <input name="postImage" class="custom-file-input" id="inputPostImage" onchange="readURL(this, 'postImageTag')" style="display: none;" type="file" accept="image/*" aria-describedby="inputGroupFileAddon01">
                                                        <label class="btn btn-primary mt-2" for="inputPostImage">
                                                            <i class="bi bi-camera"></i> Chọn ảnh cho bài đăng
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="form-row">
                                                    <div class="form-group col-md-6">
                                                        <label for="inputPostTitle">Tiêu đề bài đăng</label>
                                                        <input value="<%= post.title %>" type="text" class="form-control" name="postTitle" id="inputPostTitle" placeholder="Abc...">
                                                    </div>
                    
                                                    <div class="form-group col-md-6">
                                                        <label for="inputPostTag">Tag cho bài đăng</label>
                                                        <input value="<%= post.tag %>" type="text" class="form-control" name="postTag" id="inputPostTag" placeholder="abc, xyz, ...">
                                                    </div>
                                                </div>
                    
                                                <div class="form-group">
                                                    <label for="inputPostTitle">Mô tả của bài đăng</label>
                                                    <textarea class="form-control" name="postDescription" id="inputPostDescription" rows="9"><%= post.description %></textarea>
                                                </div>
                                            </div>
                                        </div>
    
                                        <div class="form-group">
                                            <label for="editor" class="form-label">Nội dung của bài đăng</label>
                                            <textarea name="postContent" id="editor"><%= post.content %></textarea>
                                            <script>
                                                CKEDITOR.replace( 'editor', { 
                                                    language: "vi", 
                                                    height: 400
                                                } );
                                            </script>
                                        </div>
                                        
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>

                    <!-- Confirm Delete Order Modal -->
                    <div class="modal fade" id="confirmDeletePostModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form action="" method="post">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Xác nhận</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <p class="text-danger text-center display-1">
                                            <i class="bi bi-x-circle"></i>
                                        </p>
                                        <h5 class="text-center">Bạn có chắc chắn muốn xóa bài này ?</h5>
                                        <p class="text-center">Lưu ý bạn sẽ không thể khôi phục lại bài đăng này</p>
                                    </div>
                                    <div class="modal-footer">
                                        <a href="/admin/delete-post?idPost=<%= post.idPost %>" class="btn btn-primary">Xóa</a>
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Không</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="my-3 p-3 bg-white rounded shadow">

                        <h1 class="text-uppercase">
                            <%= post.title %>
                            
                        </h1>

                        <i>"<%= post.description %>"</i>

                        <hr>
                        <div class="d-flex justify-content-between">
                            <span><i class="bi bi-calendar4-week"></i> <script>displayAddPostDatetime('<%= post.addDate %>')</script> | <i class="bi bi-eye"></i> <%= post.view %> lượt xem</span>
                            <span><i class="bi bi-tags"></i> <%= post.tag %> | <i class="bi bi-person"></i> Đăng bởi: <%= post.fullname %></span>
                        </div>
                        <hr>

                        <div>
                            <%- post.content %>
                        </div>

                    </div>


                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; By Dao Thi Hien 2022</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
