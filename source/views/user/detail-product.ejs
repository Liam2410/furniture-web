                                            <div style="width: 175px; height: 175px;"   
                                            class="rounded-circle d-flex align-items-center justify-content-center shadow m-auto">
                                                <h1 style="font-size: 27px;">
                                                    <span class="text-dark"><%= avarageRating.toPrecision(2) %> </span><i class="bi bi-star-fill text-warning"></i>
                                                </h1>
                                            </div>
                
                                            <div class="mt-2">
                                                <p class="text-center"><%= countRating %> lượt đánh giá</p>
                                            </div>
                                        </div>
                
                                        <div class="col-lg-9 col-md-12">
                
                                            <h4 class="small font-weight-bold">
                                                <i class="bi bi-star-fill text-warning"></i>
                                                <i class="bi bi-star text-warning"></i>
                                                <i class="bi bi-star text-warning"></i>
                                                <i class="bi bi-star text-warning"></i>
                                                <i class="bi bi-star text-warning"></i>
                                                <span class="float-right"><%= (oneStarCount*100/countRating).toPrecision(2) %>%</span>
                                            </h4>
                                            <div class="progress mb-4">
                                                <div class="progress-bar bg-danger" role="progressbar" id="oneStarProgressBar" 
                                                    aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                
                
                                            <h4 class="small font-weight-bold">
                                                <i class="bi bi-star-fill text-warning"></i>
                                                <i class="bi bi-star-fill text-warning"></i>
                                                <i class="bi bi-star text-warning"></i>
                                                <i class="bi bi-star text-warning"></i>
                                                <i class="bi bi-star text-warning"></i>
                                                <span class="float-right"><%= (twoStarCount*100/countRating).toPrecision(2) %>%</span>
                                            </h4>
                                            <div class="progress mb-4">
                                                <div class="progress-bar " role="progressbar" id="twoStarProgressBar" style="background-color: blueviolet;"
                                                    aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                
                
                                            <h4 class="small font-weight-bold">
                                                <i class="bi bi-star-fill text-warning"></i>
                                                <i class="bi bi-star-fill text-warning"></i>
                                                <i class="bi bi-star-fill text-warning"></i>
                                                <i class="bi bi-star text-warning"></i>
                                                <i class="bi bi-star text-warning"></i>
                                                <span class="float-right"><%= (threeStarCount*100/countRating).toPrecision(2) %>%</span>
                                            </h4>
                                            <div class="progress mb-4">
                                                <div class="progress-bar" role="progressbar" id="threeStarProgressBar"
                                                    aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                
                
                                            <h4 class="small font-weight-bold">
                                                <i class="bi bi-star-fill text-warning"></i>
                                                <i class="bi bi-star-fill text-warning"></i>
                                                <i class="bi bi-star-fill text-warning"></i>
                                                <i class="bi bi-star-fill text-warning"></i>
                                                <i class="bi bi-star text-warning"></i>
                                                <span class="float-right"><%= (fourStarCount*100/countRating).toPrecision(2) %>%</span>
                                            </h4>
                                            <div class="progress mb-4">
                                                <div class="progress-bar bg-info" role="progressbar" id="fourStarProgressBar"
                                                    aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                
                                            
                                            <h4 class="small font-weight-bold">
                                                <i class="bi bi-star-fill text-warning"></i>
                                                <i class="bi bi-star-fill text-warning"></i>
                                                <i class="bi bi-star-fill text-warning"></i>
                                                <i class="bi bi-star-fill text-warning"></i>
                                                <i class="bi bi-star-fill text-warning"></i>
                                                <span class="float-right"><%= (fiveStarCount*100/countRating).toPrecision(2) %>%</span>
                                            </h4>
                                            <div class="progress">
                                                <div class="progress-bar bg-success" role="progressbar" id="fiveStarProgressBar"
                                                    aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                
                                            <script>
                                                displayProgressBar('fiveStarProgressBar', '<%= fiveStarCount*100/countRating %>')
                                                displayProgressBar('fourStarProgressBar', '<%= fourStarCount*100/countRating %>')
                                                displayProgressBar('threeStarProgressBar', '<%= threeStarCount*100/countRating %>')
                                                displayProgressBar('twoStarProgressBar', '<%= twoStarCount*100/countRating %>')
                                                displayProgressBar('oneStarProgressBar', '<%= oneStarCount*100/countRating %>')
                                            </script>
                                            
                                        </div>
                                    </div>
                                </div>
                
                                <div class="card my-3 p-3 bg-white rounded">
                                    <% commentRatingList.forEach((commentRating, index) => {%>
                                        <div class="media text-muted pt-3">
                                            <img class="mr-2 rounded-circle img-thumbnail" width="64px" height="64px" src="/<%= commentRating.avatar %>">
                
                                        <% if(index < commentRatingList.length - 1){ %>
                                            <p class="media-body pb-3 mb-0 lh-125 border-bottom border-gray">
                                        <% } else { %>
                                            <p class="media-body pb-3 mb-0 lh-125">
                                        <% } %>
                                                <strong class="d-block text-gray-dark"><%= commentRating.fullname %> 
                                                    <span class="ml-2">
                                                        <script>displayRatingPoint2Star('<%= commentRating.ratingPoint %>')</script>
                                                    </span>
                
                                                    <span style="float: right;"><script>displayCommentDatetime('<%= commentRating.commentDate %>')</script></span>
                                                </strong>
                
                                                <span>
                                                    <%= commentRating.commentContent %>
                                                </span>
                                            </p>
                                        </div>
                                    <% }) %>
                                </div>
                            <% } %>
                        </div>

                    </div>

                    


                </div>
            </div>
            <!---K-->

            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="line">

                        </div>
                        <h6 class="title">
                            Mô tả
                        </h6>
                        <div class="info">
                            <%- product.description %>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <h4 class="title title__detail">
                            SẢN PHẨM TƯƠNG TỰ
                        </h4>
                    </div>
                    <div class="col-md-12">
                        <div class="product__wrap product__wrap--slide">
                            <ul class="list__item">
                                <% relatedProductList.forEach((product, index) => { %>
                                    <div class="item">
                                        <div class="thumb">
                                            <img src="/<%= product.productImage %>" alt="">
                                        </div>
                                        <h4 class="title__product">
                                            <a href="/user/detail-product?idProduct=<%= product.id %>" class="simple__link">
                                                Bộ Bàn Ghế Gỗ Hương Đá Kiểu Hoàng Gia Chân 12 Đẹp Giá Rẻ
                                            </a>
                                        </h4>
                                        <div class="price">
                                            <% if (product.salePercent != null) {%>
                                                <del>
