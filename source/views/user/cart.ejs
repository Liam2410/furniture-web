    <!-- main -->
    <main class="feature">

        <h2 class="title">
            <span class="hight-light">Giỏ hàng</span> của bạn
        </h2>

        <div class="container">

            <% if(!cart) { %>
                <h2 class="title">Rất tiếc chưa có sản phẩm nào trong giỏ hàng của bạn</h2>
            <% } else { %>
                <div class="row">

                    <div class="col-md-4 order-md-2 mb-4">
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">Sản phẩm</span>
                            <span class="badge badge-secondary badge-pill"><%= cartNumber %></span>
                        </h4>
                        <ul class="list-group mb-3">
                            <% var total = 0 %>
                            <% cart.forEach((product, index) => { %>
                                <li class="list-group-item d-flex justify-content-between lh-condensed">
                                    <div class="row">
                                        <div class="col-6">
                                            <img src="/<%= product.productImage %>">
                                        </div>
                                        <div class="col-6">
                                            <h6 class="my-0"><a class="product_name" href="/user/detail-product?idProduct=<%= product.id %>"><%= product.name %></a></h6>
                                            <small class="text-muted">
                                                <div class="btn-group btn-group-sm" role="group" aria-label="...">
                                                    <% if(product.quantityProduct < 2) { %>
                                                        <a href="/user/add-quantity?idProduct=<%= product.id %>" class="btn btn-sm btn-primary" style="font-size: 7px;"><i class="bi bi-plus-lg"></i></a>
                                                        <input class="bg-light text-center" value="<%= product.quantityProduct %>" style="width: 27px;" readonly>
                                                        <button class="btn btn-sm btn-primary" style="font-size: 7px;" disabled><i class="bi bi-dash-lg"></i></button>
                                                    <% } if (product.quantityProduct >= product.quantity) { %>
                                                        <button href="/user/add-quantity?idProduct=<%= product.id %>" class="btn btn-sm btn-primary" style="font-size: 7px;" disabled><i class="bi bi-plus-lg"></i></button>
                                                        <input class="bg-light text-center" value="<%= product.quantityProduct %>" style="width: 27px;" readonly>
                                                        <a class="btn btn-sm btn-primary" style="font-size: 7px;"><i class="bi bi-dash-lg"></i></a>
                                                    <% } if(product.quantityProduct >= 2 && product.quantityProduct < product.quantity) { %>
                                                        <a href="/user/add-quantity?idProduct=<%= product.id %>" class="btn btn-sm btn-primary" style="font-size: 7px;"><i class="bi bi-plus-lg"></i></a>
                                                        <input class="bg-light text-center" value="<%= product.quantityProduct %>" style="width: 27px;" readonly>
                                                        <a href="/user/minus-quantity?idProduct=<%= product.id %>" class="btn btn-sm btn-primary" style="font-size: 7px;"><i class="bi bi-dash-lg"></i></a>
                                                    <% } %>
                                                </div>
                                            </small>
                                        </div>
    
                                    </div>
                                    <% if(product.salePercent != null) { %>
                                        <% total += product.price*(1 - (product.salePercent/100)) * product.quantityProduct %>
                                        <span class="text-muted"><script>displayNumber2VND('<%= product.price*(1 - (product.salePercent/100)) * product.quantityProduct %>')</script></span>
                                    <% } else { %>
                                        <% total += product.price * product.quantityProduct %>
                                        <span class="text-muted"><script>displayNumber2VND('<%= product.price * product.quantityProduct %>')</script></span>
                                    <% } %>
    
    
                                    <div class="dropdown">
                                       <a id="dLabel" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="bi bi-three-dots-vertical"></i>
                                       </a>
    
                                        <div class="dropdown-menu" aria-labelledby="dLabel">
                                            <a class="dropdown-item" href="/user/remove-product-cart?idProduct=<%= product.id %>">Xóa sản phẩm</a>
                                        </div>
                                    </div>
                                    
                                </li>
                            <% }) %>
    
                            <script>
                                new Cuttr('.product_name', {
                                    truncate: 'characters',
                                    length: 24
                                });
    
                            </script>
    
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Tổng (đ) </span>
                                <strong><script>displayNumber2VND('<%= total %>')</script></strong>
                            </li>
                        </ul>
            
                        <form class="card p-2">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Promo code">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-secondary">Redeem</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    
                        
                    <div class="col-md-8 order-md-1">
    
                        <h4 class="mb-3 text-muted">Thông tin giao hàng</h4>
    
                        <form action="/user/cart" method="post" class="needs-validation" novalidate="">
    
                            <input name="totalPrice" type="hidden" value="<%= total %>">
    
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="firstName">Tên người nhận hàng</label>
                                    <input name="receiverName" type="text" class="form-control" id="firstName" placeholder="" value="" required="">
                                    <div class="invalid-feedback">
                                        Valid first name is required.
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="lastName">Số điện thoại</label>
                                    <input name="receiverPhone" type="text" class="form-control" id="lastName" placeholder="" value="" required="">
                                    <div class="invalid-feedback">
                                        Valid last name is required.
                                    </div>
                                </div>
                            </div>
                
                            <div class="mb-3">
                                <label for="email">Email <span class="text-muted">(tiến trình giao hàng sẽ được cập nhật thông qua email này)</span></label>
                                <input name="email" type="email" class="form-control" id="email" placeholder="you@example.com">
                                <div class="invalid-feedback">
                                    Please enter a valid email address for shipping updates.
                                </div>
                            </div>
                
                            <div class="mb-3">
                                <label for="address">Địa chỉ giao hàng</label>
                                <input name="shippingAddress" type="text" class="form-control" id="address" placeholder="7A Hai Bà Trưng, Trần Hưng Đạo, Hoàn Kiếm..." required="">
                                <div class="invalid-feedback">
                                    Please enter your shipping address.
                                </div>
                            </div>
                
                            <div class="mb-3">
                                <label for="address2">Ghi chú <span class="text-muted">(nếu có)</span></label>
                                <textarea name="note" class="form-control" aria-label="With textarea" rows="5"></textarea>
    
                            </div>
                
                            <hr class="mb-4">
    
                            <p class="font-italic">Lưu ý sau khi xác nhận đặt hàng chúng tôi sẽ liên hệ theo số điện thoại bạn đã cung cấp bên trên để xác nhận đơn hàng và thông tin thêm cho bạn.</p>
                            
                            <hr class="mb-4">
                    
    
                            <button class="btn btn-primary btn-lg btn-block" type="submit">Đặt hàng</button>
    
                        </form>
                    </div>
        
                </div>
            <% } %>

            
        </div>
    </main>
